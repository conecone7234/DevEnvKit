{
  "python.defaultInterpreterPath": "${workspaceFolder}/python-portable/python.exe",
  "python.analysis.typeCheckingMode": "basic",
  "editor.formatOnSave": false,
  "python.testing.unittestEnabled": true,
  "python.testing.unittestArgs": [
    "-v",
    "-s",
    ".",
    "-p",
    "test*.py"
  ],
  "python.testing.pytestEnabled": false,
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true
  },
  "terminal.integrated.env.windows": {
    "PATH": "${workspaceFolder}\\python-portable;${workspaceFolder}\\python-portable\\Scripts;${env:PATH}"
  }
}